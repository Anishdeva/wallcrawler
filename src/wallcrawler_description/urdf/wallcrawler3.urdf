        <origin rpy="1.57 0 0" xyz="0 0.01875 0"/>
        <mass value="0.054"/>
        <inertia ixx="77.34" ixy="0.00" ixz="0.00" iyy="77.34" iyz="0.00" izz="14.06"/>
        </inertial>
        
    </link>

    <joint name="b2flink1_to_baselink" type="revolute">
