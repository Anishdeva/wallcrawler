<?xml version="1.0"?>
<robot name="wallcrawler2">
    <!-- Define material (colors) -->
    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>

    <material name="red">
        <color rgba="0.8 0 0 1"/>
    </material>

    <!-- Define base link (Choosing center segment) -->
    <link name="base_link">
        <visual>
        <geometry>
            <box size="0.184 0.1 0.05"/>
        </geometry>
        <material name="red"/>
        </visual>
        <collision>
        <geometry>
            <box size="0.184 0.1 0.05"/>
        </geometry>
        </collision>
        <inertial>
        <mass value="0.531"/>
        <inertia ixx="5687.833" ixy="14.061" ixz="0.00" iyy="288.26" iyz="0.00" izz="5624.56"/>        
        </inertial>                
    </link>

    <!-- Wheels attached to base/central link -->
    <link name="right_wheel">
        <visual>
        <geometry>
            <cylinder length="0.02" radius="0.051"/>
        </geometry>
        <origin rpy="0 1.57 0" xyz="0 0.0 0.0"/>
        <material name="blue"/>
        </visual>
        <collision>
      <geometry>
            <cylinder length="0.02" radius="0.051"/>
        </geometry>
        <origin rpy="0 1.57 0" xyz="0 0.0 0.0"/>
        </collision>
        <inertial>
        <origin rpy="0 1.57 0" xyz="0 0.0 0.0"/>
        <mass value="0.57"/>
        <inertia ixx="1026.482" ixy="0" ixz="0" iyy="0" iyz="1933.441" izz="1026.482"/>
        </inertial>                
    </link>

    <joint name="base_to_right_wheel" type="revolute">
        <axis xyz="1 0 0" rpy="0 0 0"/>
        <limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.092 0.0 0.0"/>
    </joint>

   
    <link name="left_wheel">
        <visual>
        <geometry>
            <cylinder length="0.02" radius="0.051"/>
        </geometry>
        <origin rpy="0 1.57 0" xyz="0 0.0 0.0"/>
        <material name="blue"/>
        </visual>
        <collision>
