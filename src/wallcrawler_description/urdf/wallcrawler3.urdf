        </geometry>
        <origin xyz="0 0.05 0"/>
        </collision> 
        <inertial>
        <origin xyz="0 0.05 0"/>
        <mass value="0.30"/>
        <inertia ixx="3564.563" ixy="0.00" ixz="0.00" iyy="977.27" iyz="0.00" izz="2671.66"/>
        </inertial>       
